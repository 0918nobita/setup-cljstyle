{
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "tsc && spago build --watch",
    "compile": "tsc && spago build",
    "bundle": "esbuild --platform=node --bundle --minify src/bootstrap.js --outfile=dist/setup-cljstyle.js",
    "build": "pnpm compile && pnpm bundle",
    "lint": "concurrently npm:lint:src npm:lint:test",
    "lint:src": "purty validate src",
    "lint:test": "purty validate test",
    "format": "concurrently npm:format:src npm:format:test",
    "format:src": "purty src --write",
    "format:test": "purty test --write",
    "test": "tsc && spago test",
    "git-add": "git add dist/setup-cljstyle.js"
  },
  "pre-commit": [
    "build",
    "git-add"
  ],
  "dependencies": {
    "@actions/core": "1.6.0",
    "@actions/io": "1.1.1",
    "@actions/tool-cache": "1.7.1",
    "node-fetch": "3.0.0"
  },
  "devDependencies": {
    "@types/node": "16.11.6",
    "concurrently": "6.3.0",
    "esbuild": "0.13.9",
    "pre-commit": "1.2.2",
    "purescript": "0.14.5",
    "purty": "7.0.0",
    "spago": "0.20.3",
    "typescript": "4.4.4"
  }
}
