{
  "name": "@setup-cljstyle/github-action",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc && ts-eager ./scripts/build.ts",
    "dev": "tsc -w & ts-eager ./scripts/dev.ts",
    "lint": "eslint --ext .js,.ts .",
    "format:check": "prettier --check \"**/*.{ts,js}\"",
    "format:write": "prettier --write \"**/*.{ts,js}\""
  },
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@setup-cljstyle/commit-comment": "*",
    "@setup-cljstyle/domain-models": "*",
    "parse-diff": "^0.9.0"
  },
  "devDependencies": {
    "@setup-cljstyle/config": "*",
    "@types/node": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "esbuild": "^0.14.5",
    "eslint": "*",
    "eslint-config-prettier": "*",
    "prettier": "*",
    "ts-eager": "*",
    "typescript": "*"
  }
}
